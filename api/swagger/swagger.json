          "200": {
            "description": "Sensor data is successfully saved",
            "schema": {
              "$ref": "#/definitions/sensorData"
            }
          }
        }
      }
    },

    "/sensor/getStationSensorData": {
      "post": {
        "tags": [
          "SensorData"
        ],
        "description": "Get Station Sensor Data",
        "parameters": [
